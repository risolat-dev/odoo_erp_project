<odoo>
    <record id="view_sale_approval_request_form" model="ir.ui.view">
        <field name="name">sale.approval.request.form</field>
        <field name="model">sale.approval.request</field>
        <field name="arch" type="xml">
            <form string="Approval Request">
                <header>
                    <button name="action_submit" string="Submit" type="object" states="draft" class="btn-primary"/>
                    <button name="action_approve" string="Approve" type="object" states="submitted"
                            groups="sales_team.group_sale_manager" class="btn-success"/>
                    <button name="action_reject" string="Reject" type="object" states="submitted"
                            groups="sales_team.group_sale_manager" class="btn-danger"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,submitted,approved"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="sale_order_id"/>
                            <field name="total_amount"/>
                        </group>
                        <group>
                            <field name="requested_by"/>
                            <field name="approved_by" attrs="{'invisible': [('state', '!=', 'approved')]}"/>
                        </group>
                    </group>
                    <group string="Rejection Details" attrs="{'invisible': [('state', '!=', 'rejected')], 'required': [('state', '=', 'rejected')]}">
                        <field name="reject_reason"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_sale_approval_request" model="ir.actions.act_window">
        <field name="name">Sale Approval Requests</field>
        <field name="res_model">sale.approval.request</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>